{
  "name": "eleventy-starter",
  "version": "0.0.1",
  "author": "Dustin Whisman",
  "license": "ISC",
  "scripts": {
    "prestart": "run-p clean node-version",
    "prebuild": "run-p clean node-version",
    "start": "run-p eleventy:dev sass:dev postcss:watch js:dev js:watch",
    "build": "run-s eleventy:build sass:build postcss:build js:build",
    "clean": "rimraf dist",
    "eleventy:dev": "NODE_ENV=development eleventy --serve",
    "eleventy:build": "NODE_ENV=production eleventy",
    "sass:dev": "sass --watch --embed-source-map src/assets/scss:dist/assets/css/tmp",
    "sass:build": "sass --no-source-map src/assets/scss:dist/assets/css/tmp",
    "postcss:dev": "postcss dist/assets/css/tmp/*.css -d dist/assets/css",
    "postcss:build": "postcss --no-map dist/assets/css/tmp/*.css -d dist/assets/css",
    "postcss:watch": "chokidar \"**/tmp/*.css\" -c \"npm run postcss:dev\"",
    "js:rollup": "rollup -c -m inline",
    "js:minify": "node tasks/minify-js.js",
    "js:dev": "run-p js:rollup js:minify",
    "js:build": "rollup -c && npm run js:minify",
    "js:watch": "chokidar \"**/src/assets/**/*js\" -c \"npm run js:dev\"",
    "lint:css": "stylelint src/**/*.css src/**/*.scss",
    "lint:js": "eslint src/**/*.js src/**/*.mjs",
    "lint": "run-s lint:css lint:js",
    "test:js": "jest --config=jest.config.js src/assets/js/**/*js --passWithNoTests",
    "node-version": "check-node-version --package",
    "test": "run-s test:js"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@rollup/plugin-babel": "^5.3.0",
    "check-node-version": "^4.1.0",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.39.2",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "terser": "^5.8.0"
  }
}
